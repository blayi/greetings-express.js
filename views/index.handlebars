  <header>
    <h1>GREETINGS</h1>
  </header>

<form action="/greet"  method="POST">
    <div class="row">
      <div class="col-6">
      name :<input class="InputText" name='personName' type="text" placeholder="Enter name here">
       <span class="greetCount" >0{{counter}}</span>
      </div>
    </div>
    <br>

    <div class="row">
      <div class="col-1">
        <input type="radio" name="languageType" class="languageTypeRadio" value="English">
        <span>English</span>
      </div>

      <div class="col-1">
        <input type="radio" name="languageType" class="languageTypeRadio" value="Xhosa">
        <span>IsiXhosa</span>
      </div>

      <div class="col-1">
        <input type="radio" name="languageType" class="languageTypeRadio" value="Afrikaans">
        <span>Afrikaans</span>
      </div>
    </div>
    <br>

    <div class="row">
      <div class="col-2">
        <button class="button-primary Greetbtn" type="submit" value="{{greet}}">Greet Me</button>
      </div>
      <div class="col-3">
        <button class="button-primary Clearbtn">Clear Name</button>
      </div>
    </div>
    </form>
    <div class="row">
      <div class="col-6">
      <div class="namegreeted" value="">{{greetPerson}}</div>
    </div>
  </div>
